@model MVCstok.Models.Entity.TBL_MUSTERILER

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    @using (Html.BeginForm("Ekle", "Musteri", FormMethod.Post, new { @class = "form-horizantal col-md-6" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.MUSTERIAD)
            @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MUSTERISOYAD)
            @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MUSTERISOYAD,"", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button name="Ekle" id="btnMusteriEkle" class="btn btn-primary">Müşteri Ekle</button>
        </div>
    }

<script>
    $("#btnMusteriEkle").click(function () {
        alert("musteri eklendi");
    })
</script>