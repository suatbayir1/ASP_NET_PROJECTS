@model MVCstok.Models.Entity.TBL_MUSTERILER

@{
                /**/

                ViewBag.Title = "MusteriGetir";
                Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>MusteriGetir</h2>

@using (Html.BeginForm("Guncelle", "Musteri", FormMethod.Post, new { @class = "form-horizantal col-md-6" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.MUSTERIID)
        <div class="form-group">
            @Html.TextBoxFor(m => m.MUSTERIID, new { @class = "form-control col-md-2" })
            @Html.ValidationMessageFor(m => m.MUSTERIID,null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MUSTERIID)
        <div class="form-group">
            @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control col-md-2" })
            @Html.ValidationMessageFor(m => m.MUSTERIAD, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MUSTERISOYAD)
        <div class="form-group">
            @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class="form-control col-md-2"})
            @Html.ValidationMessageFor(m => m.MUSTERISOYAD,null, new { @class="text-danger"})
        </div>
    </div>

    <div class="form-group">
        <input type="submit" name="Müşteri Güncelle" value="Müşteri Kaydet" class="btn btn-success form-control" /> 
    </div>

    <div class="form-group">
        @Html.ActionLink("Listeye Dön", "Index")
    </div>
}